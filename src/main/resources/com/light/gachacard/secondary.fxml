<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="576.0" prefWidth="1024.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.light.gachacard.SecondaryController">
    <children>
        <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" text="Enter your PIN" textAlignment="CENTER" textFill="#274bfb">
         <font>
            <Font size="24.0" />
         </font></Label>
      <PasswordField fx:id="inputPIN" alignment="CENTER" maxWidth="300.0" prefWidth="200.0" promptText="123456" />
      <Button fx:id="enterButton" mnemonicParsing="false" onAction="#pinInput" prefHeight="30.0" prefWidth="100.0" text="Enter" textAlignment="CENTER" />
        <Button fx:id="exitButton" onAction="#switchToPrimary" prefHeight="30.0" prefWidth="100.0" text="Back" textAlignment="CENTER" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
