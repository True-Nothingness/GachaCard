   <children>
      <ImageView fitHeight="450.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@images/Fate_Grand_Order_Logo.png" />
         </image>
      </ImageView>
      <Button fx:id="connectButton" mnemonicParsing="false" onAction="#connectCard" text="Connect Card" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
